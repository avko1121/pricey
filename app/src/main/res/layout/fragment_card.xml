<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background2"
    android:layout_height="match_parent"
    tools:context="fragments.CashFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="115dp"
        android:layout_height="92dp"
        android:src="@mipmap/gift"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.156" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="363dp"
        android:layout_height="31dp"
        android:layout_marginStart="5dp"
        android:gravity="fill"
        android:text="თავდაპირველი ფასი :  80 ლარი"
        android:textSize="20.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="363dp"
        android:layout_height="31dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18sp"
        android:gravity="fill"
        android:text="Pricey კრედიტები : 0"
        android:textSize="20.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.539" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="363dp"
        android:layout_height="31dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18sp"
        android:gravity="fill"
        android:text="ჯამი : 60 ლარი"
        android:textSize="20.5sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="363dp"
        android:layout_height="31dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10sp"
        android:gravity="fill"
        android:text="ფასდაკლება : 25 %"
        android:textSize="20.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="363dp"
        android:layout_height="31dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25sp"
        android:gravity="fill"
        android:text="დანაზოგი : 20 ლარი "
        android:textSize="20.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="131dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="315dp"
                    android:id="@+id/checkbox1"
                    android:layout_height="58dp"
                    android:text="ბარათი 1"
                    android:background="#F37272"/>

                <Button
                    android:id="@+id/deletebutton1"
                    android:layout_width="105dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="58dp"
                    android:background="#DA6060"
                    android:text="ბარათის წაშლა"
                    android:textAllCaps="false"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="315dp"
                    android:id="@+id/checkbox2"
                    android:layout_height="58dp"
                    android:text="ბარათი 2"
                    android:background="#F37272"/>

                <Button
                    android:id="@+id/deletebutton2"
                    android:layout_width="105dp"
                    android:layout_height="58dp"
                    android:background="#DA6060"
                    android:text="ბარათის წაშლა"
                    android:textAllCaps="false"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttoncard"
        android:layout_width="138dp"
        android:layout_height="36dp"
        android:textAllCaps="false"
        android:background="#f51b1c"
        android:text="შეძენა"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.959" />

</androidx.constraintlayout.widget.ConstraintLayout>